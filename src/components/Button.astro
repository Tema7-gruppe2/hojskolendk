---
const { title, variant } = Astro.props;
---

<button class={variant}>{title}
  <slot />
</button>


<style>
    button {
        background-color: var(--cta-primary);
        color: var(--color-text-primary);
        border: none;
        border-radius: 4px;
        padding: 16px 24px;
        font-size: 0.9rem;
        font-weight: bold;
        cursor: pointer;
        margin: 10px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    button.secondary {
        background-color: var(--cta-secondary);
        color: var(--color-text-secondary);
    }
</style>