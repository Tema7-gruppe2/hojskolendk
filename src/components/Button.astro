---
const { title, variant, href } = Astro.props;
---

<a href={href} class={variant}>{title}
  <slot />
</a>


<style>
    a {
        background-color: var(--cta-primary);
        color: var(--color-text-primary);
        border: none;
        border-radius: 4px;
        padding: 16px 24px;
        font-size: 0.9rem;
        font-weight: bold;
        cursor: pointer;
        margin: 10px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .secondary {
        background-color: var(--cta-secondary);
        color: var(--color-text-secondary);
        margin: 0px;
    }

    .tertiary {
        background-color: var(--cta-tertiary);
        color: var(--color-text-primary);
        margin: 0px;
         padding: 10px 30px;
    }

    .secondary-2 
    {
        margin: 0px;
        background-color: var(--cta-primary);
        color: var(--color-text-primary);
        padding: 10px 30px;
    }
</style>